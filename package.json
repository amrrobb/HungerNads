{
  "name": "hungernads",
  "version": "0.1.0",
  "private": true,
  "description": "AI gladiator colosseum on Monad - May the nads be ever in your favor",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
