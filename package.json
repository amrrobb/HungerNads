    "db:migrate": "wrangler d1 migrations apply hungernads-db --local",
    "battle": "tsx scripts/run-battle.ts"
  },
  "dependencies": {
    "ai": "^4.1.0",
    "@ai-sdk/openai": "^1.1.0",
    "openai": "^4.77.0",
    "viem": "^2.21.0",
    "zod": "^3.24.0",
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "wrangler": "^3.99.0",
    "typescript": "^5.7.0",
    "@cloudflare/workers-types": "^4.20241230.0",
    "tsx": "^4.19.0"
  }
